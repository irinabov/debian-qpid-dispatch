{
  "env": {
    "browser": true,
    "node": true,
    "amd": true,
    "jquery": true
  },
  "extends": ["eslint:recommended", "plugin:patternfly-react/recommended"],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-console": "on",
    "no-debugger": 1
  }
}
